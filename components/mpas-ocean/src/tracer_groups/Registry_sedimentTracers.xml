	<nml_record name="tracer_forcing_sedimentTracers">
		<nml_option name="config_use_sedimentTracers" type="logical" default_value=".false." units="unitless"
			description="if true, the 'sedimentGRP' category is enabled for the run"
			possible_values=".true. or .false."
		/>
	</nml_record>

	<packages>
		<package name="sedimentTracersPKG" description="This package includes variables required to include sedimentTracers."/>
	</packages>

	<var_struct name="state" time_levs="2">
		<var_struct name="tracers" time_levs="2">
			<var_array name="sedimentTracers" dimensions="nVertLevels nCells Time" type="real" packages="sedimentTracersPKG" >
				<!-- Add constituents of tracer group -->
				<var name="sedConcen" array_group="sedimentGRP" units="kg m^{-3}"
          description="(suspended) sediment Concentration"
				/>
			</var_array>
		</var_struct>
	</var_struct>

	<var_struct name="tend" time_levs="1">
		<var_struct name="tracersTend" time_levs="1">
			<var_array name="sedimentTracersTend" type="real" dimensions="nVertLevels nCells Time" packages="sedimentTracersPKG">
				<!-- Add constituents of tracer group -->
				<var name="sedConcenTend" array_group="sedimentGRP" units="kg m^{-3} s^{-1}"
          description="(suspended) sediment Cocentration Tendency"
				/>
			</var_array>
		</var_struct>
		<var_struct name="tracersBedTend" time_levs="1">
			<var_array name="sedimentTracersBedTend" type="real" dimensions="nCells Time" packages="sedimentTracersPKG">
				<var name="sedConcenBedTend" array_group="sedimentTracerFluxGRP" units="m s^{-1}"
          description="Thickness tendency of sediment layer at the seafloor. Positive means thickening of sediment layer"
				/>
			</var_array>
		</var_struct>
	</var_struct>

	<var_struct name="forcing" time_levs="1">
		<var_struct name="tracersSurfaceFlux" time_levs="1">
			<var_array name="sedimentTracersSurfaceFlux" type="real" dimensions="nCells Time" packages="sedimentTracersPKG">
				<var name="sedConcenSurfaceFlux" array_group="sedimentSurfaceFluxGRP" units="kg m^{-3} m s^{-1}"
					description="Flux of (suspended) sediment through the ocean surface due to river runoff. Positive into ocean"
				/>
			</var_array>
			<var_array name="sedimentTracersSurfaceFluxRunoff" type="real" dimensions="nCells Time" packages="sedimentTracersPKG">
				<var name="sedConcenSurfaceFluxRunoff" array_group="sedimentSurfaceFluxRunoffGRP" units="kg m^{-3} m s^{-1}"
					description="Flux of (suspended) sediment through the ocean surface due to river runoff. Positive into ocean"
				/>
			</var_array>
		</var_struct>
	</var_struct>
